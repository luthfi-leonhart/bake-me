<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/layout_small_margin"
    android:paddingEnd="@dimen/layout_general_margin"
    android:paddingStart="@dimen/layout_general_margin"
    android:paddingTop="@dimen/layout_small_margin">

    <TextView
        android:id="@+id/index_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_grey"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/darker_gray"
        tools:text="1" />

    <TextView
        android:id="@+id/step_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_general_margin"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Short description" />

</LinearLayout>